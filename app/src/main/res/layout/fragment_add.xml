<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sobhani.mohammad.parvandeh.fragment.AddFragment">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@id/adding_toolbar"
            layout="@layout/toolbar"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_centerHorizontal="true"

            tools:context="com.sobhani.mohammad.parvandeh.AddActivity"
            android:id="@+id/linearLayout">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/inputLayoutFileId"
                    android:layout_width="match_parent"
                    android:layout_weight="100"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/editTextFileID"
                        android:inputType="number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:hint="File ID *"
                        android:layout_marginTop="16dp"/>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/inputLayoutName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="100">
                    <EditText
                        android:id="@+id/editTextName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textDirection="rtl"
                        android:hint="Name *"
                        android:textSize="16sp"
                        android:layout_marginTop="16dp"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/inputLayoutPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="100">
                    <EditText
                        android:inputType="number"
                        android:id="@+id/editTextPhoneNumber"
                        android:hint="Phone Number *"
                        android:textSize="16sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/inputLayoutPhone2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="100">
                    <EditText
                        android:inputType="number"
                        android:id="@+id/editTextPhoneNumber2"
                        android:hint="Phone Number 2nd"
                        android:textSize="16sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"/>
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/inputLayoutTel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="100">

                    <EditText
                        android:inputType="number"
                        android:id="@+id/editTextTel"
                        android:hint="Telephone"
                        android:textSize="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"/>
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/inputLayoutTeller"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="100">
                    <EditText
                        android:id="@+id/editTextTeller"
                        android:hint="Teller"
                        android:textDirection="rtl"
                        android:maxLines="1"
                        android:textSize="16sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"/>
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <android.support.design.widget.TextInputLayout
            android:id="@+id/inputLayoutDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
            android:layout_weight="100">

            <EditText
            android:id="@+id/editTextDescription"
            android:textDirection="rtl"
            android:hint="Description"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/inputLayoutDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="100">

                    <EditText
                        android:inputType="date"
                        android:id="@+id/editTextVisitDate"
                        android:hint="First visit"
                        android:textSize="16sp"
                        android:focusable="false"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/inputLayoutAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="100">
                    <EditText
                        android:id="@+id/editTextAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textDirection="rtl"
                        android:maxLines="1"
                        android:hint="Address"
                        android:textSize="16sp" />
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <Button
                android:text="Save"
                android:textColor="@android:color/white"
                android:layout_width="200dp"
                android:layout_marginTop="12dp"
                android:layout_gravity="end"
                android:theme="@style/MyButton"
                android:layout_height="wrap_content"
                android:id="@+id/buttonSave"/>

        </LinearLayout>

        </ScrollView>

    </LinearLayout>

</FrameLayout>
